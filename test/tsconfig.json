{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2020",
        "lib": ["es2020"],
        "outDir": "../out-test",
        "sourceMap": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "types": ["mocha", "node", "sinon"]
    },
    "include": [
        "**/*.ts"
    ],
    "exclude": []
}